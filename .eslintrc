{
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true,
    "mocha": true,
  },
  "settings": {
    "ecmascript": 6,
    "jsx": true
  },
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "comma-dangle": [2, "always-multiline"],
    "no-underscore-dangle": 0,
  },
  "globals": {
    "expect": true,
    "sinon": true,
  },
}
